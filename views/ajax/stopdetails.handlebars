<div data-role="header" data-theme="a">
    <a href="#" data-icon="back" data-rel="back" data-transition="flow">Back</a>
    <h1>{{result.name}}</h1>
</div>
<script type="text/javascript">
var selectBtn = "<a href=\"javascript: {{func}}('{{stopid}}', '{{result.name}}', {{result.plusmins}}, 'popupDetails');\" class='ui-icon-check ui-btn-icon-left ui-btn ui-corner-all ui-shadow ui-btn-g' style='margin: 0px;'>Select as {{direction}}</a>";
</script>
<div role="main" class="ui-content">
    <ul id="stopDetails" data-role="listview" data-inset="true" style="margin: 0 !important;">
        <li><a href="javascript: showMap('{{result._id}}', 'popupDetails', selectBtn);" class="ui-icon-location ui-btn-icon-left ui-btn ui-corner-all ui-shadow ui-btn-a">Show Map</a>
        <a href="javascript: {{func}}('{{stopid}}', '{{result.name}}', {{result.plusmins}}, 'popupDetails');" class="ui-icon-check ui-btn-icon-left ui-btn ui-corner-all ui-shadow ui-btn-g">Select as {{direction}}</a></li>
        <li><p><img src="{{result.imageurl}}" style="max-width: 100%;" alt="" /></p></li>
        <li><h3>Current # in line: {{result.inline}}</h3></li>
        <li><h3>Next bus at: {{#if nextBus}}{{nextBus}}{{else}}Unknown{{/if}}</h3></li>
        <li><h3>{{#if mindiff}}Estimated waiting time: {{mindiff}} minutes{{else}}Unknown{{/if}}</h3></li>
    </ul>
</div>